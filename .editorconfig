# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-styles newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,ts,tsx,json,styl}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true


